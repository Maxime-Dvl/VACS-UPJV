{% extends 'base.html.twig' %}

{% block title %}Disponibilités{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Ecran de contrôle de vos Disponibilités</div>
          {% if app.user != null %}
            {{ form_start(form) }}
                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                <div class="form_group">
                    <div class="col-md-12 mb-3">
                    {{ form_row(form.DateDebut, {'attr': {'class': 'form-control'}}) }}
                    </div>

                <div class="form_group">
                    <div class="col-md-12 mb-3">
                    {{ form_row(form.DateFin, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Ajouter
                    </button>
                    </div>
                </div>
            {{ form_end(form) }}          
          {% endif %}
        </div>
      </div>
      {% if app.user == null %}
      <a href="{{ path('app_login') }}" class="btn btn-info">
        Vous devez être connectez pour accéder à cette page>></a
      >
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}