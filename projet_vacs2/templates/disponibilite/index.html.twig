{% extends 'base.html.twig' %}

{% block title %}Disponibilités{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Ajoutez des Disponibilités</div>
            {% if app.user != null %}
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form) }}
                <div class="form_group">
                    <div class="col-md-12 mb-3">
                    {{ form_row(form.DateDebut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form_group">
                    <div class="col-md-12 mb-3">
                    {{ form_row(form.DateFin, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Ajouter
                    </button>
                    </div>
                </div>
            {{ form_end(form) }}                       
          {% endif %}
        </div>
      </div>
      {% if app.user == null %}
      <a href="{{ path('app_login') }}" class="btn btn-info">
        Vous devez être connectez pour accéder à cette page>></a
      >
      {% endif %}
    </div>
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Gérez vos Disponibilités</div>
            {% if app.user != null %}
                <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date Début</th>
                        <th>Date Fin</th>
                        <th>Métier</th>
                        <th>Reserver</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   {% for disponibilite in disponibilites %}
                        <tr>
                            <td>{{ disponibilite.DateDebut|date('d/m/Y/ H:i') }}</td>
                            <td>{{ disponibilite.DateFin|date('d/m/Y H:i') }}</td>
                            <td>{{ disponibilite.Metier }}</td>
                            <td>{{ disponibilite.reserve }}</td>
                            <td><a href="{{ path('edit_disponibilite', {id: disponibilite.id}) }}" class="btn btn-primary">Editer</a></td>
                            <td>
                              <form method="post" action="{{ path('supp_disponibilite', {id: disponibilite.id}) }}">
                                <input type="hidden" name="_method" value="DELETE" />
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                              </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                </table>                      
            {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}


      
     